body
  font-family Helvetica, sans-serif
.loading
  width 100%
  height 100%
  display flex
  flex-direction column
  align-items center
  justify-content center
  .loading-text
    font-size 60px
.app
  padding-top 25px
  height 100%
  width 100%
  .date
    width 100%
    text-align center
    font-size 30px
    margin-bottom 30px
  .conversation
    display flex
    align-items center
    justify-content center
    .participant
      flex-grow 1
      .participant-header
        display flex
        flex-direction column
        align-items center
        justify-content center
        .participant-name
          text-align center
          font-size 30px
        .participant-data
          text-align center
          font-size 24px
      .cloud
        display flex
        align-items center
        justify-content center
  .timescale-chooser
    width 100%
    text-align center
    position absolute
    bottom 220px
  .frequency-series
    position absolute
    bottom 0px
    width 100%
    margin-left -5px
    .rd3-areachart-yaxis
      display none
  .rc-slider
    position absolute
    bottom 10px
